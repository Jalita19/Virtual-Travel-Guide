<!DOCTYPE html>
<html>
<head>
    <title>Virtual Travel Guide</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <h1>Destinations</h1>
    <ul>
        <% destinations.forEach(destination => { %>
            <li>
                <h2><%= destination.name %></h2>
                <p><%= destination.description %></p>
            </li>
        <% }) %>
    </ul>

    <h2>Add a New Destination</h2>
    <form action="/api/destinations" method="post">
        <input type="text" name="name" placeholder="Destination name" required>
        <input type="text" name="description" placeholder="Description" required>
        <button type="submit">Add Destination</button>
    </form>
  <img src="/images/<%= destination.image %>" alt="<%= destination.name %>">
  <p><%= destination.description %></p>
  <h2>Comments</h2>
  <ul>
    <% comments.forEach(comment => { %>
      <li>
        <strong>User <%= comment.userId %>:</strong> <%= comment.text %>
      </li>
    <% }) %>
  </ul>
  <h2>Add Comment</h2>
  <form action="/api/comment" method="POST">
    <input type="hidden" name="destinationId" value="<%= destination.id %>">
    <label for="userId">User ID:</label>
    <input type="number" id="userId" name="userId" placeholder="Enter user ID" required>
    <br>
    <label for="text">Comment:</label>
    <input type="text" id="text" name="text" placeholder="Enter comment" required>
    <br>
    <button type="submit">Add Comment</button>
  </form>
</body>
</html>